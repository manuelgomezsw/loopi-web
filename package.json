{
  "name": "loopi-web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:debug": "ng serve --configuration=development --open",
    "build": "ng build",
    "build:dev": "ng build --configuration=development",
    "build:analyze": "ng build --configuration=production --stats-json && npx webpack-bundle-analyzer dist/loopi-web/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:debug": "ng test --watch=true --browsers=Chrome",
    "test:coverage": "ng test --no-watch --code-coverage --browsers=ChromeHeadless",
    "lint": "ng lint",
    "debug:verify": "node scripts/test-debug.js",
    "debug:clean": "rm -rf dist/ node_modules/.cache .angular/",
    "debug:info": "ng version && node --version && npm --version",
    "validate:setup": "node scripts/validate-setup.js",
    "setup": "npm install && npm run validate:setup",
    "dev": "npm run start:debug",
    "clean:all": "rm -rf dist/ node_modules/ package-lock.json && npm install",
    "docs:serve": "echo 'Documentaci√≥n disponible en:' && echo 'üìñ README.md' && echo 'üêõ DEBUG-SETUP.md' && echo '‚úÖ DEBUGGING-COMPLETE.md' && echo 'üõ°Ô∏è SECURITY-IMPROVEMENTS.md'"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.1.6",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "^20.1.6",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  }
}
