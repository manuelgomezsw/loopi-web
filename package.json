{
  "name": "loopi-web",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:debug": "ng serve --configuration=development --open",
    "build": "ng build",
    "build:dev": "ng build --configuration=development",
    "build:analyze": "ng build --configuration=production --stats-json && npx webpack-bundle-analyzer dist/loopi-web/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:debug": "ng test --watch=true --browsers=Chrome",
    "test:coverage": "ng test --no-watch --code-coverage --browsers=ChromeHeadless",
    "lint": "echo 'ESLint temporalmente deshabilitado en hooks - usar npm run lint:manual'",
    "lint:manual": "eslint src/**/*.ts --fix",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:html": "eslint src/**/*.html",
    "format": "prettier --write src/**/*.{ts,html,css,scss,json}",
    "format:check": "prettier --check src/**/*.{ts,html,css,scss,json}",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "debug:verify": "node scripts/test-debug.js",
    "debug:clean": "rm -rf dist/ node_modules/.cache .angular/",
    "debug:info": "ng version && node --version && npm --version",
    "validate:setup": "node scripts/validate-setup.js",
    "setup": "npm install && npm run validate:setup",
    "dev": "npm run start:debug",
    "clean:all": "rm -rf dist/ node_modules/ package-lock.json && npm install",
    "docs:serve": "echo 'Documentaci√≥n disponible en:' && echo 'üìñ README.md' && echo 'üêõ DEBUG-SETUP.md' && echo '‚úÖ DEBUGGING-COMPLETE.md' && echo 'üõ°Ô∏è SECURITY-IMPROVEMENTS.md'"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write"
    ],
    "*.{html,css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.1.6",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "^20.1.6",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@ngrx/effects": "^20.0.1",
    "@ngrx/entity": "^20.0.1",
    "@ngrx/router-store": "^20.0.1",
    "@ngrx/store": "^20.0.1",
    "@ngrx/store-devtools": "^20.0.1",
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^20.2.0",
    "@angular-eslint/eslint-plugin-template": "^20.2.0",
    "@angular-eslint/template-parser": "^20.2.0",
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "~5.8.2"
  }
}
